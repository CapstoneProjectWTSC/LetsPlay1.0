<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wtsc.letsplay10.MainActivity">

    <TextView
        android:text="Connecting..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userEmailTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/userIDTextView" />

    <TextView
        android:text="Connecting..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userPasswordTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/userEmailTextView"
        android:layout_alignStart="@+id/userEmailTextView" />

    <TextView
        android:text="Connecting..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userIDTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginStart="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:text="Connecting..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userLNameTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/userFNameTextView"
        android:layout_alignStart="@+id/userGameNameTextView"
        android:layout_marginTop="26dp" />

    <TextView
        android:text="Connecting..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userFNameTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/userIDTextView"
        android:layout_alignStart="@+id/userIDTextView" />

    <TextView
        android:text="Connecting..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userGameNameTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/userLNameTextView"
        android:layout_alignStart="@+id/userEmailTextView" />
</RelativeLayout>
