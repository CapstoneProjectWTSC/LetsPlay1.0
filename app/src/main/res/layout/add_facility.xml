<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wtsc.letsplay10.Account">

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:lineSpacingMultiplier="1.2"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:text="Add Facility"
            android:textSize="30dp" />
    </TableRow>
<TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_span="2"
        android:lineSpacingMultiplier="1.2"
        android:gravity="left"
        android:paddingBottom="20dp"
        android:text="Choose how you'd like to add a facility."
        android:textSize="20dp" />
</TableRow>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RGroup"
        android:checkedButton="@+id/clButton" >
        <RadioButton
            android:id="@+id/clButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add By Current Location" />

        <EditText
            android:id="@+id/FacilityNameText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Facility Name"
            android:inputType="textPersonName"
            android:paddingTop="10dp" />
